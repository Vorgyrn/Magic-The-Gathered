#:kivy 2.1.0
WindManager:
    HomePage:
    DeckPage:
    NewPage:
    CollectionPage:
    TradePage:

<HomePage>:
    name: "home"

    GridLayout:
        size: root.width, root.height
        cols: 1
        rows: 3

        BoxLayout:
            orientation: "horizontal"

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: 'Deck Lists'
                on_release: 
                    app.root.current = "decks"
                    root.manager.transition.direction = "right"

            BoxLayout:
                orientation: "horizontal"

            Button:
                text: 'New Deck'
                on_release: 
                    app.root.current = "newdeck"
                    root.manager.transition.direction = "left"
                    
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: 'Collection'
                on_release: 
                    app.root.current = "coll"
                    root.manager.transition.direction = "right"
            BoxLayout:
                orientation: "horizontal"

            Button:
                text: 'Register New Cards/Trade'
                on_release: 
                    app.root.current = "trade"
                    root.manager.transition.direction = "left" 

                    


<DeckPage>:
    name: "decks"

    GridLayout:
        size: root.width, root.height
        cols: 2
        rows: 1
        
        BoxLayout: 
            orientation: "vertical"

            Button:
                text: "Go Home"
                on_release: 
                    app.root.current = "home"
                    root.manager.transition.direction = "left"

        BoxLayout:
            orientation: "vertical"

            Button:
                # pos_hint: .90, .90
                size_hint: 0.05, 0.05
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direcion = "left"

                Image: 
                    id: "home_icon"
                    source: "Resources\Home_Icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size_hint: 0.05, .05



    

<NewPage>:
    name: "newdeck"
    Button:
        text: "Go Home"
        on_release: 
            app.root.current = "home"
            root.manager.transition.direction = "right"

<CollectionPage>:
    name: "coll"
    Button:
        text: "Go Home"
        on_release: 
            app.root.current = "home"
            root.manager.transition.direction = "left"
            

<TradePage>:
    name: "trade"
    Button:
        text: "Go Home"
        on_release: 
            app.root.current = "home"
            root.manager.transition.direction = "right"
